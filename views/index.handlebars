  <div class='row'>
    <div class="col text-center" id='one'class="task">
      <h3>Burgers Not Eaten</h3>
        {{!-- each is a loop through all burger data --}}
        {{#each burger_data}}
        {{!-- unless = if returns a false value --}}
          {{#unless this.devoured}}
          <div class='row'>
            <div class='col-6' style='text-align: left;'>
              <input class="form-control" type="text" placeholder="{{ plusOne @index}} . {{this.burger_name}}" readonly>
            </div>
            <div class='col-3'> 
                <form method='POST' action='/update?_method=PUT'>
                  <input input type="hidden" type="text" name="burger_id" value={{this.id}}>
                <button type="submit" id='{{this.id}}' class=" test btn btn-default">Devour it!</button>
              </form>
            </div>
            <div class='col-3'> 
                <form method='POST' action='/update?_method=DELETE'>
                  <input input type="hidden" type="text" name="burger_id" value={{this.id}} >
                <button type="submit" id='{{this.id}}' class=" test btn btn-default">Delete</button>
              </form>
            </div>
          </div>
          {{/unless}}
        {{/each}}
    </div>
  
    <div class="col text-center" id='two' class="task">
      <h3>Burgers Eaten</h3>
      <div class="row"><br /><br />
        {{#each burger_data}}
        {{!-- if = if it returns false, undefined, null, '', 0 , [], it will not render/run --}}
          {{#if this.devoured}}
            <div class='col-9'>
            <input class="form-control" type="text" placeholder="{{ plusOne @index}} . {{this.burger_name}}" readonly>
            </div>
            <div class='col-3'> 
                <form method='POST' action='/update?_method=DELETE'>
                  <input input type="hidden" type="text" name="burger_id" value={{this.id}}>
                <button type="submit" id='{{this.id}}' class=" test btn btn-default">Delete</button>
              </form>
            </div>  
          {{/if}}
        {{/each}}
    </div>
  </div>
  </div>
</div>

